{% extends 'base.html.twig' %}

{% block title %}Bienvenue!{% endblock %}

{% block body %}
<section class="hero">
        <div class="container hero-content">
            <div class="hero-text">
                <span class="hero-badge">Garage de confiance depuis 2005</span>
                <h1 class="hero-title">Trouvez votre <span class="text-accent">véhicule idéal</span> au meilleur prix</h1>
                <p class="hero-description">Plus de 150 véhicules d'occasion soigneusement sélectionnés et contrôlés. Garantie incluse sur tous nos véhicules.</p>
                <div class="hero-actions">
                    <a href="#vehicules" class="btn btn-primary btn-lg">Voir nos véhicules</a>
                    <a href="#services" class="btn btn-outline btn-lg">Nos services</a>
                </div>
                <div class="hero-stats">
                    <div class="stat">
                        <span class="stat-number">150+</span>
                        <span class="stat-label">Véhicules en stock</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number">2500+</span>
                        <span class="stat-label">Clients satisfaits</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number">19</span>
                        <span class="stat-label">Années d'expérience</span>
                    </div>
                </div>
            </div>
            <div class="hero-image">
                <img src="/placeholder.svg?height=500&width=700" alt="Showroom AutoPro">
            </div>
        </div>
    </section>

    <!-- Search Section -->
    {% include 'car/_recherche_form.html.twig' with {'filterForm': filterForm} %}
    <!-- Vehicles Section -->
    <section id="vehicules" class="vehicles-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Nos Véhicules à la Une</h2>
                <p class="section-subtitle">Découvrez notre sélection de véhicules d'occasion récents et garantis</p>
            </div>
            <div class="vehicles-grid" id="resultats-autos">
                <!-- Vehicle Card 1 -->
                {% include 'car/_list_results.html.twig' %}
            </div>
            <div class="vehicles-cta">
                <a href="#" class="btn btn-outline btn-lg">Voir tous nos véhicules</a>
            </div>
        </div>
    </section>

    {% include 'car/_services.html.twig' with {'garage' : garage} %}
    {% include 'car/_contact.html.twig' with {'contactForm': contactForm, 'garage' : garage} %}

{% endblock %}
