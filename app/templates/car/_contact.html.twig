<!-- Contact Section -->
    <section id="contact" class="contact-section">
        <div class="container">
            <div class="contact-content">
                <div class="contact-info">
                    <h2 class="section-title">Contactez-nous</h2>
                    <p class="contact-description">Notre équipe est à votre disposition du lundi au samedi pour répondre à toutes vos questions.</p>
                    <div class="contact-details">
                        <div class="contact-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                                <circle cx="12" cy="10" r="3"/>
                            </svg>
                            <div>
                                <strong>Adresse</strong>
                                <p>{{ garage.adresse }}</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                            </svg>
                            <div>
                                <strong>Téléphone</strong>
                                <p>{{ garage.telephone }}</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                            <div>
                                <strong>Email</strong>
                                <p>{{ garage.email }}</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <polyline points="12 6 12 12 16 14"/>
                            </svg>
                            <div>
                                <strong>Horaires</strong>
                                <p>Lun - Ven: 9h - 19h<br>Sam: 9h - 18h</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="contact-form-wrapper">
                    {{ form_start(contactForm, {'attr': {'class': 'contact-form'}}) }}
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_label(contactForm.nom) }}
                                {{ form_widget(contactForm.nom) }}
                                {{ form_errors(contactForm.nom) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_label(contactForm.prenom) }}
                                {{ form_widget(contactForm.prenom) }}
                                {{ form_errors(contactForm.prenom) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_label(contactForm.email) }}
                                {{ form_widget(contactForm.email) }}
                                {{ form_errors(contactForm.email) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_label(contactForm.telephone) }}
                                {{ form_widget(contactForm.telephone) }}
                                {{ form_errors(contactForm.telephone) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(contactForm.sujet) }}
                            {{ form_widget(contactForm.sujet) }}
                            {{ form_errors(contactForm.sujet) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(contactForm.message) }}
                            {{ form_widget(contactForm.message) }}
                            {{ form_errors(contactForm.message) }}
                        </div>
                        {{ form_widget(contactForm.envoyer, {'attr': {'class': 'btn btn-primary btn-lg btn-block'}}) }}
                    {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
    </section>