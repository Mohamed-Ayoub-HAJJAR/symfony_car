{% for car in cars %}
                <article class="vehicle-card">
                    <div class="vehicle-image">
                        <img src="{{ asset('uploads/cars/' ~ car.images[0].name) }}" alt="{{ car.model }}">
                        <span class="vehicle-badge">Garantie 12 mois</span>
                    </div>
                    <div class="vehicle-info">
                        <h3 class="vehicle-title">{{ car.brand }} {{ car.model }}</h3>
                        <p class="vehicle-subtitle">1.5 BlueHDi 130 S&S Allure</p>
                        <div class="vehicle-specs">
                            <span class="spec">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                                    <line x1="16" y1="2" x2="16" y2="6"/>
                                    <line x1="8" y1="2" x2="8" y2="6"/>
                                    <line x1="3" y1="10" x2="21" y2="10"/>
                                </svg>
                                {{ car.year }}
                            </span>
                            <span class="spec">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2v20M2 12h20"/>
                                </svg>
                                {{ car.mileage }} km
                            </span>
                            <span class="spec">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                                    <path d="M14 2v6h6"/>
                                </svg>
                                {{ car.energy }}
                            </span>
                        </div>
                        <div class="vehicle-footer">
                            <span class="vehicle-price">{{ car.price / 100 }} €</span>
                            <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-sm">Voir détails</a>
                        </div>
                    </div>
                </article>
                {% endfor %}